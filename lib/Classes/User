  return await showDialog<bool>(
    context: context,
    builder: (context) {
      return AlertDialog(
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(16.0),
        ),
        title: const Text(
          'Age Restriction',
          style: TextStyle(fontWeight: FontWeight.bold, color: Colors.black),
